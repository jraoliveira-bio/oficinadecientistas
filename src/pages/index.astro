---
import Layout from "../layouts/Layout.astro";
import HomeHero from "../components/home/HomeHero.astro";
import HomeIntro from "../components/home/HomeIntro.astro";

import HomeFeatured from "../components/home/HomeFeatured.astro";

const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

const hero = {
  href: `${base}cursos/curso-escrita/`,
  imgSrc: `${base}imagens/gatocard2.png`,
  imgAlt: "Ilustração para o curso de escrita científica",
  label: "Curso em destaque",
  title: "Escrita Científica: Da Estrutura ao Impacto",
  description:
    "Curso completo de 10 aulas para transformar sua relação com a escrita acadêmica.",
  meta: "10 aulas • ~8h de conteúdo",
  cta: "Ver conteúdo do curso",
};

const covers = [
  {
    href: `${base}blog/`,
    imgSrc: `${base}imagens/prancheta-card.png`,
    imgAlt: "A Prancheta — Blog de desenvolvimento",
    label: "Bastidores",
    title: "A Prancheta",
    description: "Decisões, bastidores e construção do projeto em tempo real — com ideias e testes de layout.",
    meta: "Atualizações frequentes",
    cta: "Explorar o blog",
  },
  // Quando tiver o “par” (YouTube/Fórum/outro curso), adicione aqui o segundo cover.
];
---

<Layout title="Home">
  <main class="home">
    <HomeHero base={base} />

    <HomeIntro
      title="Nossa Proposta"
      text="Fornecer um ciclo básico de formação para alunos da pós-graduação e fazer análises científicas de temas importantes."
    />

    <HomeFeatured hero={hero} covers={covers} />
  </main>
</Layout>

<style>
  .home {
    padding-bottom: 2rem;
  }
</style>
