---
import Layout from "../layouts/Layout.astro";

import HomeHero from "../components/home/HomeHero.astro";
import HomeIntro from "../components/home/HomeIntro.astro";
import FeatureCard from "../components/home/FeatureCard.astro";

const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

// Links (fácil de mexer depois)
const hrefCurso = `${base}cursos/curso-escrita/`;
const hrefPrancheta = `${base}blog/`; // <- ajuste se sua rota for outra (ex: `${base}prancheta/`)

// Imagens
const imgCurso = `${base}imagens/gatocard2.png`;
const imgPrancheta = `${base}imagens/prancheta-card.png`; // <- crie/coloque essa imagem ou troque o caminho
---

<Layout title="Home">
  <main class="home">
    <HomeHero base={base} />

    <HomeIntro
      title="Nossa Proposta"
      text="Fornecer um ciclo básico de formação para alunos da pós-graduação e fazer análises científicas de temas importantes."
    />

    <section class="secao-destaques" aria-labelledby="destaques-titulo">
      <h2 id="destaques-titulo" class="secao-titulo">Em Destaque</h2>

      <div class="destaques-grid">
        <FeatureCard
          href={hrefCurso}
          imgSrc={imgCurso}
          imgAlt="Ilustração para o curso de escrita científica"
          label="Curso em destaque"
          title="Escrita Científica: Da Estrutura ao Impacto"
          description="Curso completo de 10 aulas para transformar sua relação com a escrita acadêmica."
          meta="10 aulas • ~8h de conteúdo"
          cta="Ver conteúdo do curso"
        />

        <FeatureCard
          href={hrefPrancheta}
          imgSrc={imgPrancheta}
          imgAlt="A Prancheta — Blog de desenvolvimento"
          label="Bastidores"
          title="A Prancheta"
          description="Blog de desenvolvimento: decisões, bastidores e construção do projeto em tempo real."
          meta="Atualizações frequentes"
          cta="Explorar o blog"
        />
      </div>
    </section>
  </main>
</Layout>

<style>
  .home {
    padding-bottom: 2rem;
  }

  .secao-destaques {
    padding: 2rem 0;
  }

  .secao-titulo {
    margin: 0 0 1rem 0;
  }

  .destaques-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    align-items: stretch;
  }

  @media (max-width: 900px) {
    .destaques-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
