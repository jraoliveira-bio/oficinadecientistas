---
import Layout from '../../../layouts/Layout.astro';
import { Content } from './introducao.mdx';
import Divider from '../../../components/Divider.astro'; // ADICIONE ESTA LINHA
import imagemDoDivisor from '~/../public/imagens/divider3.png'; 
const base = import.meta.env.BASE_URL.endsWith('/')
? import.meta.env.BASE_URL
: import.meta.env.BASE_URL + '/';
---

<Layout title="Curso de Escrita Científica">
    <main>
        <section class="secao-emblema">
            <img src={`${base}logo1.png`} alt="Logo Oficina de Cientistas" class="logo-emblema">
            <h3>Escrita Científica: Da Estrutura ao Impacto</h3>
            <Divider image={imagemDoDivisor.src} />
        </section>

        <div class="texto-introdutorio">
            <Content />
        </div>

        <div class="cta-container">
            <a href="#grade" class="botao-principal">Ir para a Primeira Aula</a>
        </div>

        <section id="grade" class="secao-grade-curricular">
            <h2>Grade Curricular</h2>
            <div class="acordeon-container">
                <div class="acordeon-item">
                    <button class="acordeon-cabecalho">
                        <span class="acordeon-titulo"><i class="fas fa-video"></i> Aula 01: O Esqueleto de um Artigo</span>
                        <i class="fas fa-plus icone-acordeon"></i>
                    </button>
                    <div class="acordeon-conteudo"><p>Descrição da Aula 01...</p></div>
                </div>
                <div class="acordeon-item">
                    <button class="acordeon-cabecalho">
                        <span class="acordeon-titulo"><i class="fas fa-video"></i> Aula 02: Construindo Parágrafos</span>
                        <i class="fas fa-plus icone-acordeon"></i>
                    </button>
                    <div class="acordeon-conteudo"><p>Descrição da Aula 02...</p></div>
                </div>
            </div>
        </section>

        <div class="cta-container">
            <a href="#grade" class="botao-principal">Ir para a Primeira Aula</a>
        </div>
    </main>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const acordeonItems = document.querySelectorAll('.acordeon-item');
        acordeonItems.forEach(item => {
            const cabecalho = item.querySelector('.acordeon-cabecalho');
            cabecalho.addEventListener('click', () => {
                const conteudo = item.querySelector('.acordeon-conteudo');
                const isAberto = item.classList.contains('aberto');
                item.classList.toggle('aberto');
                const icone = cabecalho.querySelector('.icone-acordeon');
                if (isAberto) {
                    conteudo.style.maxHeight = null;
                    icone.classList.replace('fa-minus', 'fa-plus');
                } else {
                    conteudo.style.maxHeight = conteudo.scrollHeight + "px";
                    icone.classList.replace('fa-plus', 'fa-minus');
                }
            });
        });
    });
</script>