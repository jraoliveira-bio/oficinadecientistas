---
interface Props {
  base: string;
}
const { base } = Astro.props;
---

<section class="home-hero">
  <img
    src={`${base}logo1.png`}
    alt="Logo Oficina de Cientistas"
    class="home-hero__logo"
    loading="eager"
    decoding="async"
  />
  <h2 class="home-hero__titulo">Oficina de Cientistas</h2>
  <p class="home-hero__slogan">DIFUNDINDO CONHECIMENTO E PROPAGANDO REDES</p>
</section>

<style>
  .home-hero {
    text-align: center;
    padding: 45px 40px 60px 40px;
    border-bottom: 1px solid var(--borda);
  }

  .home-hero__logo {
    display: block;
    max-width: 150px;
    height: auto;
    margin: 0 auto 1px auto;
    filter: drop-shadow(0px 4px 6px rgba(0, 0, 0, 0.3));
  }

  .home-hero__titulo {
    font-size: 36px;
    margin: 0;
  }

  .home-hero__slogan {
    font-family: Montserrat;
    margin: 4px 0 0 0;
    color: var(--cor-texto-sec);
    font-size: medium;
    font-weight: 300;
    letter-spacing: 4px;
  }
</style>
