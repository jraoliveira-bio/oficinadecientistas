---
interface Props {
  title: string;
  text: string;
}
const { title, text } = Astro.props;
---

<section class="home-intro">
  <div class="home-intro__conteudo">
    <h2 class="home-intro__titulo">{title}</h2>
    <p class="home-intro__texto">{text}</p>
  </div>
</section>

<style>
  .home-intro {
    background-color: rgba(74, 105, 139, 0.03);
    padding: 60px 0;
    border-top: 1px solid var(--borda);
    border-bottom: 1px solid var(--borda);
  }

  .home-intro__conteudo {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .home-intro__titulo {
    margin: 0 0 15px 0;
    font-size: 24px;
  }

  .home-intro__texto {
    max-width: 800px;
    margin: 0;
    line-height: 1.7;
    font-size: 18px;
    color: var(--cor-texto-sec);
  }
</style>
