---
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + '/';
---
<header class="topo">
  <div class="topo-conteudo">
    <div class="logo-titulo-wrapper">
      <img
        src={`${base}logo2.png`}
        alt="Logo da Oficina de Cientistas"
        class="logo-header"
      />
      <h1>Oficina de Cientistas</h1>
    </div>

    <input type="checkbox" id="menu-toggle" class="menu-toggle" />
    <label for="menu-toggle" class="menu-hamburger">
      <span></span><span></span><span></span>
    </label>

    <nav class="menu-principal">
      <ul>
        <li><a href={base}>Home</a></li>
        <li><a href={`${base}cursos/`}>Cursos</a></li>
        <li><a href={`${base}aulas-especiais/`}>Aulas Especiais</a></li>
        <li><a href={`${base}sobre/`}>Sobre</a></li>
        <li><a href={`${base}links/`}>Links</a></li>
      </ul>
    </nav>
  </div>
</header>
